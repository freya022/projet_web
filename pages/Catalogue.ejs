<link href="../public/Catalogue.css" rel="stylesheet">
<title>Catalogue</title>
<header>
    <%- include('NavBar') %>
</header>

<article>
    <h1>Notre catalogue</h1>

    <table>
        <thead>
        <tr>
            <td>Nom Article</td>
            <td>Categorie</td>
            <td>Prix</td>
            <td>Description</td>
            <td>Image</td>
            <td>Ajouter au panier</td>
        </tr>
        </thead>

        <tbody>
        <% articles.forEach(function(article) { %>
            <tr>
                <td><%= article.nomArticle %></td>
                <td><%= article.categorie %></td>
                <td><%= article.prix %></td>
                <td><%= article.description %></td>
                <td><img src="<% article.lienImage %>" alt="Image article"></td>
                <td>
                    <form method="post" action="/mettre-au-panier/<%= article.idArticle %>">
                        <input type="submit" value="Ajouter">
                    </form>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>

    <h1>Votre panier</h1>

    <table>
        <thead>
        <tr>
            <td>Nom Article</td>
            <td>Categorie</td>
            <td>Prix</td>
            <td>Description</td>
            <td>Image</td>
            <td>Quantite</td>
        </tr>
        </thead>

        <tbody>
        <% articlesPanier.forEach(function(article) { %>
            <tr>
                <td><%= article.nomarticle %></td>
                <td><%= article.categorie %></td>
                <td><%= article.prix %></td>
                <td><%= article.description %></td>
                <td><img src="<% article.lienimage %>" alt="Image article"></td>
                <td><%= article.quantite %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>

    <p>Prix total: <%= prixTotal[0].prixtotal %> â‚¬</p>

    <p>
    <form action="/valider-commande" method="post">
        <input type="submit" value="Valider le panier"/>
    </form>
</article>

<footer>
    <%- include('Footer') %>
</footer>
